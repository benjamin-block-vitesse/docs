---
import Layout from '../layouts/index-layout.astro';
import Card from '~/components/Card.astro';
---

<Layout title="Welcome to Vitesse Data Hub.">
	<main>
		<h1>Welcome to the Data Hub</h1>
		<p class="instructions">
			Your home for learning about the lakehouse, reviewing documentation, and accessing data quality tests.
		</p>
		<ul role="list" class="link-card-grid">
			<Card
				href="https://kind-forest-03dc9c310.3.azurestaticapps.net/dbt/index#!/overview"
				title="Data Models"
				body="Learn about the data models and metric."
			/>
			<Card
				href="https://kind-forest-03dc9c310.3.azurestaticapps.net/gx"
				title="Expectations"
				body="Review data quality testing and expectations."
			/>
			<Card
				href="en/getting-started/"
				title="Documentation"
				body="Discover how to make the most of out data."
			/>
			<Card
				href="https://vitessepsp.slack.com/archives/C05LZH09QRY"
				title="Ask Data"
				body="Engage with the data team in Slack."
			/>
		</ul>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
